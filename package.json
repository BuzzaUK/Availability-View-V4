{
  "name": "esp32-asset-monitor",
  "version": "1.0.0",
  "description": "Industrial asset monitoring dashboard for ESP32 devices",
  "main": "src/backend/server.js",
  "scripts": {
    "start": "node src/backend/server.js",
    "dev": "nodemon src/backend/server.js",
    "client": "cd src/frontend && npm start",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "install:all": "npm install && cd src/frontend && npm install",
    "build": "cd src/frontend && npm install && npm run build",
    "heroku-postbuild": "cd src/frontend && npm install && npm run build",
    "db:init": "node src/backend/scripts/initDatabase.js",
    "db:migrate": "node src/backend/scripts/migrate.js",
    "db:seed": "node src/backend/scripts/seed.js",
    "db:reset": "node src/backend/scripts/resetDatabase.js",
    "db:clean": "node src/backend/scripts/cleanDatabase.js",
    "db:debug": "node src/backend/scripts/debugAssets.js",
    "db:check-pins": "node src/backend/scripts/checkPinNumbers.js"
  },
  "keywords": [
    "esp32",
    "iot",
    "dashboard",
    "monitoring",
    "industrial"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "aws-sdk": "^2.1691.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.5",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "puppeteer": "^21.11.0",
    "sequelize": "^6.35.0",
    "socket.io": "^4.7.2",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.x"
  }
}
